extends layout

block content
  h1= title
  if (toShow == null)
    h2 No instance to detail details
  else
    - let widgetid = toShow._id
    - let name = toShow.name
    - let price = toShow.Size
    - let description = toShow.description

    div
      div.row
        div(class='widgetAttr mr-3') widget is:
        div #{widgetid}

      div.row
        div(class='widgetAttr mr-3') name is:
        div #{name}

      div.row
        div(class='widgetAttr mr-3') price is:
        div #{price}

      div.row
        div(class='widgetAttr mr-3') description is:
        div #{description}